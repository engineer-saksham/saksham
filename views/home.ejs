<!-- views/home.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Home</title>
  <style>
    .products {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      margin-top: 20px;
      justify-content: center;
    }
    .product-card {
      border: 1px solid #ddd;
      padding: 10px;
      width: 200px;
      text-align: center;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      transition: transform 0.2s;
    }
    .product-card:hover {
      transform: scale(1.05);
    }
    .product-card img {
      width: 100%;
      height: 150px;
      object-fit: cover;
      border-radius: 5px;
    }
  </style>
</head>
<body>
    <%- include('partials/user-header', { user: user }) %>

    <h1>Welcome to the Home Page</h1>
<!-- views/home.ejs ke andar, products list -->
<div class="products">
  <% if (products && products.length > 0) { %>
    <% products.forEach(product => { %>
      <div class="product-card">
        <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
        <h2><%= product.name %></h2>
        <p>Price: â‚¹<%= product.price %></p>
        <p><%= product.description %></p>

        <!-- Buy Now Button -->
        <form action="/place-order/<%= product._id %>" method="POST">
          <button type="submit">Buy Now</button>
        </form>
      </div>
    <% }) %>
  <% } else { %>
    <p>No products available.</p>
  <% } %>
</div>

</body>
</html>
